generator client {
  provider = "prisma-client-js"
}

model Trip {
  id           String        @id @default(uuid())
  destination  String
  starts_at    DateTime
  ends_at      DateTime
  is_confirmed Boolean       @default(false)
  created_at   DateTime      @default(now())
  Participant  Participant[] //Chave estrangeira/relacionamento

  @@map("trips")
}

model Participant {
  id           String   @id @default(uuid())
  name         String?
  email        String
  is_confirmed Boolean  @default(false)
  is_owner     Boolean  @default(false)
  created_at   DateTime @default(now())
  trip_id      String //Chave estrangeira/relacionamento

  trip Trip @relation(fields: [trip_id], references: [id])

  @@map("participants")
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
